pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh './gradlew clean build'
            }
        }

        stage('Notify') {
            steps {
                script {
                    def payload = """
                    {
                        "jobName": "deploy-service-a",
                        "eventType": "BUILD_SUCCESS",
                        "message": "✅ 빌드 성공!"
                    }
                    """

                    httpRequest(
                        httpMode: 'POST',
                        contentType: 'APPLICATION_JSON',
                        requestBody: payload,
                        url: 'http://localhost:8080/notifications/notify'
                    )
                }
            }
        }
    }
}
